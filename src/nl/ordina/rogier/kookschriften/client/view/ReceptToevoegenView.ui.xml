<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:Grid width="448px" height="155px">
			<g:row>
				<g:customCell>
					<g:Label text="Naam van recept:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="naamRecept"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Soort recept:"/>
				</g:customCell>
				<g:customCell>
					<g:ListBox ui:field="soortRecept" width="173px" height="34"/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="IngrediÃ«nten:"/>
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
						<g:VerticalPanel ui:field="ingredienten"/>
						<g:VerticalPanel>
							<g:Button ui:field="lessLines" text="-" width="24" height="30"/>
							<g:Button ui:field="moreLines" text="+" width="24" height="30"/>
						</g:VerticalPanel>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Afkomstig van:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox ui:field="afkomstigVan"/>
				</g:customCell>
				<g:customCell>
					<g:Button ui:field="opslaan">Opslaan</g:Button>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:FormPanel height="39px" ui:field="uploadForm">
				<g:HorizontalPanel width="100%" height="39px">
					<g:FileUpload ui:field="uploadField" />
					<g:Button ui:field="uploadButton" text="upload" />
				</g:HorizontalPanel>
			</g:FormPanel>
		<g:HorizontalPanel ui:field="tumbnails" height="30px" />
	</g:HTMLPanel>
</ui:UiBinder> 